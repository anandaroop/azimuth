!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ http_equiv: 'X-UA-Compatible', content: 'IE=edge' }
    %title= content_for?(:application_title) ? yield(:application_title) : 'Artsy'
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    = render partial: 'layouts/head'
    = csrf_meta_tag
  %body{ class: "#{controller.controller_name}_#{controller.action_name}" }
    %header.navigation
      %a.brand{ href: '/' }
        = render partial: 'shared/watt/svgs/mark'
      %a.nav-application-name{ href: '/' } Azimuth
      .nav
        = render 'layouts/navigation'
        - if @current_user
          .dropdown-toggle
            =@current_user.email
            %ul.dropdown-menu
              %li
                %a{ href: '/sign_out' } Log out
        - else
          %li
            %a{ href: '/auth/artsy' } Log in
    %section#main.container
      = yield
