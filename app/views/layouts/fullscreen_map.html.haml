    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    = render partial: 'layouts/head'
    = csrf_meta_tag
  %body{ class: "fullscreen-map #{controller.controller_name}_#{controller.action_name}" }
    %section.fullscreen-map
      = yield
